@model Model.UserInfo

@{
    ViewBag.Title = "PasswordProtection";
    Layout = "~/Views/Shared/_MyFilmMsater.cshtml";
}

<html>
    <head>
        <title>基本资料</title>
    </head>
    <body>
        <div style="text-align:center;">
            @using (@Html.BeginForm())
            {
                <br />
                <br />
                <p>
                    @Html.ActionLink("基本资料","Supplement","UserInfo")|
                    @Html.ActionLink("联系方式","Contact","UserInfo")|
                    @Html.ActionLink("密码保护","PasswordProtection","UserInfo")|
                    @Html.ActionLink("密码找回","GetBackPassword","UserInfo")
                </p>

                <br />
                <p>
                    密保问题：@Html.TextBoxFor(u=>u.Question)
                                @Html.ValidationMessageFor(u=>u.Question)
                </p>
                <p>
                    答&nbsp;&nbsp;案：@Html.TextBoxFor(u=>u.Answer)
                                @Html.ValidationMessageFor(u=>u.Answer)
                </p>
                <p>
                    确认答案：@Html.TextBoxFor(u=>u.Answer)
                                    @Html.ValidationMessageFor(u=>u.Answer)
                </p>
                <br />
                <p>@ViewBag.Msg</p>
                <input type="submit" id="btnSave" value="保存" style="width:80px;" />
            }
        </div>
    </body>
</html>
